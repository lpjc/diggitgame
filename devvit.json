{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "diggitgame",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "reddit": {
      "enable": true,
      "asUser": ["SUBMIT_POST", "SUBMIT_COMMENT"]
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create PostA",
        "description": "Create a Type A game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/create-post-a"
      },
      {
        "label": "Create PostBB",
        "description": "Create a Type B game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/create-post-b"
      },
      {
        "label": "Open new dig site as me",
        "description": "Create a new dig site for another subreddit and comment on this post",
        "location": "post",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/relic-spawn-test"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "diggitgame_dev"
  }
}
